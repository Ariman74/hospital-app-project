<!DOCTYPE html>
<html>
<head dir="rtl">
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body dir="rtl">
    <div dir="rtl" class="navbar navbar-inverse navbar-fixed-top" >
        <div dir="rtl" class="container">
            <div dir="rtl" class="navbar-header" >
                <button type="button" dir="rtl"  class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <table dir="rtl" BorderStyle="Solid" BorderWidth="3px" CellPadding="4" CellSpacing="2" Font-Names="Arabic Typesetting" Font-Size="Large" ForeColor="Black" AllowPaging="True">
                    <tr>
                        <td>@Html.ActionLink(" صفحه اصلی ", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })</td>
                        <td>@Html.ActionLink(" نمایش بیماران ", "Index", "Sick", new { area = "" }, new { @class = "navbar-brand" })</td>
                        <td>@Html.ActionLink(" ثبت بیمار جدید ", "Create", "Sick", new { area = "" }, new { @class = "navbar-brand" })</td>
                        <td>@Html.ActionLink(" نمایش کاربران ", "Index", "User", new { area = "" }, new { @class = "navbar-brand" })</td>
                        <td>@Html.ActionLink(" ثبت کاربر جدید ", "Create", "User", new { area = "" }, new { @class = "navbar-brand" })</td>
                    </tr>
                </table>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            
        </footer>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>